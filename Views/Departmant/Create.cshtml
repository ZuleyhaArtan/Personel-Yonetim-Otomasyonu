@model deneme2.Models.Departmant

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Yeni Birim Oluştur</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Birim Adı</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.departmantName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.departmantName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>


@model deneme2.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/bootstrap.js"></script>
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-8"></div>
            <div class="form-group col-lg-4">
                <div class="box">


                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="row form-group">
                            @Html.LabelFor(f => f.EMail, new { @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(f => f.EMail, new { @class = "form-control", title = "Kullanıcı adınızı giriniz.", @Value = @ViewBag.user })
                            </div>
                        </div>
                        <div class="row form-group">
                            @Html.LabelFor(f => f.Password, new { @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.PasswordFor(f => f.Password, new { @class = "form-control", title = "Kullanıcı şifrenizi giriniz.", @Value = @ViewBag.user })
                            </div>
                        </div>
                        <div class="notification tip"><span class="strong"></span>@Html.ValidationSummary(false, "")</div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary float-right">Gönder</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</body>

</html>
